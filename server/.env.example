PORT=5000
MONGO_URI=mongodb+srv://user:password@cluster.mongodb.net/social-shorts
JWT_SECRET=your_jwt_secret_key_here_min_32_characters
CORS_ORIGIN=http://localhost:3000

# Google OAuth (YouTube)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Facebook OAuth (Facebook & Instagram)
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# YouTube API (for fetching videos)
YOUTUBE_API_KEY=your_youtube_api_key

# Instagram Graph API
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_instagram_business_account_id

# TikTok OAuth (if available in your region)
TIKTOK_CLIENT_ID=your_tiktok_client_id
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret

# Session
SESSION_SECRET=your_session_secret_key

# Video Fetch Interval (in minutes)
VIDEO_FETCH_INTERVAL=60

